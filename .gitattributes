# Set default behavior to automatically normalize line endings
* text=auto

# Kotlin source files
*.kt text eol=lf
*.kts text eol=lf

# XML files
*.xml text eol=lf

# Gradle files
*.gradle text eol=lf

# Shell scripts
*.sh text eol=lf

# Properties files
*.properties text eol=lf

# Markdown
*.md text eol=lf

# Git attributes
.gitattributes text eol=lf

# EditorConfig
.editorconfig text eol=lf
